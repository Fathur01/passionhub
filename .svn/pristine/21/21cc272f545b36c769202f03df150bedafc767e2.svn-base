<!-- count login -->
<section class="content login">
	<div class="container">
		<div class="breadcrumb">
			<a href="#/inputActivity">{{ 'Input' | translate }} {{ 'Activity' | translate }} </a>&nbsp; <i class="fa fa-caret-right"></i>
		</div>
		<h2>{{ 'Input' | translate }} {{ 'Activity' | translate }}</h2>
	</div>
</section>

<section class="content">
	<div class="container">
			<form name="inputActivity">
				<div class="row" >
					<div class="table-responsive">
						<table class="table borderless " align="center">
							<tbody >
								<td class="bold">{{ 'Activity_Desc' | translate
									}}</td>
								<td><input type="text" name="activityDesc" 
										ng-model='request_activityDesc' id="activityDesc"
										value="" required>
										</textarea></td>								
							</tbody>
						</table>
					</div>

				</div>
				<div class="text-right">
					<button type="submit" ng-click="submit()" class="btn-primary bg-biru-light">{{
						'Input' | translate }}</button>
				</div>
			</form>

		<div class="enter clearfix"></div>
	</div>
</section>